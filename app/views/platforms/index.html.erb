<div class="content">

  <h1>Listing platforms</h1>

  <div class="content-loader">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td><%= platform.name %></td>
        <td><%= platform.company %></td>
        <td><%= platform.start %></td>
        <td><%= platform.end %></td>
        <td><%= link_to 'Show', platform %></td>
        <td><%= link_to 'Edit', edit_platform_path(platform) %></td>
        <td><%= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Platform', new_platform_path %>

</div>