<div class="content">

  <h1>Listado de Roms</h1>

  <div class="input-group">
    <%= form_tag(roms_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Roms", class: 'form-control' %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: 'btn btn-success' %>
        </span>
    <% end %>
  </div>

  <div class="content-loader">
    <%= will_paginate %>

    <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Platform</th>
      <th>Genre</th>
      <th>Year</th>
      <th>Company</th>
      <th>Passed</th>
      <th>Playing</th>
      <th>Savefile</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roms.each do |rom| %>
      <tr>
        <td><%= rom.name %></td>
        <td><%= rom.platform.name %></td>
        <td><%= rom.genre.name %></td>
        <td><%= rom.year %></td>
        <td><%= rom.company %></td>
        <td><%= rom.passed %></td>
        <td><%= rom.playing %></td>
        <td><%= rom.savefile %></td>
        <td><%= rom.comment %></td>
        <td><%= link_to 'Show', rom %></td>
        <td><%= link_to 'Edit', edit_rom_path(rom) %></td>
        <td><%= link_to 'Destroy', rom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>

</table>
    <%= will_paginate %>
    </div>

<br>


<%= link_to 'New Rom', new_rom_path %>
</div>