<div class="content">
  <h1>Listado de Pel√≠culas</h1>

  <div class="input-group">
    <%= form_tag(peliculas_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Busca Peliculas", class: 'form-control' %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: 'btn btn-success' %>
        </span>
    <% end %>
  </div>

  <div class="content-loader">
    <%= will_paginate %>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Director</th>
            <th>Year</th>
            <th>Country</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @peliculas.each do |pelicula| %>
            <tr>
              <td><%= pelicula.name %></td>
              <td><%= pelicula.director %></td>
              <td><%= pelicula.year %></td>
              <td><%= pelicula.paise.name %></td>
              <td><%= link_to 'Show', pelicula %></td>
              <td><%= link_to 'Edit', edit_pelicula_path(pelicula) %></td>
              <td><%= link_to 'Destroy', pelicula, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <%= will_paginate %>
    </div>
  <br>

  <%= link_to 'Nueva Pelicula', new_pelicula_path %>
</div>